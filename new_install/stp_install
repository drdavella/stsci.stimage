args="$*"
export args

echo ARGS=$args

. stp_tools

while read line
do
	echo XXXXXXXX
	eval `echo $line | split_line `
	echo XXXXXXXX
	echo pkg $pkg
	echo ''
	(
	if cd $pkg
	then
		pwd
		if grep -q setuptools setup.py
		then
			echo using setuptools
			rm -rf junk
			if python setup.py install --single-version-externally-managed --record=junk $args
			then
				:
			else
				exit 1
			fi
			rm -rf junk
		else
			echo using distutils
			if python setup.py install $args
			then
				:
			else
				exit 1
			fi
		fi
	else
		echo CD FAILED
		exit 1
	fi
	)
	if [ $? != 0 ]
	then
		echo install failed
		exit 1
	fi
	echo ''
done
